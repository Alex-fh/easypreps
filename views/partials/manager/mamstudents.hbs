    {{/gt}}

    {{!-- Additional first numbers for big numbers --}}
    {{#gte np (subtract pagitems 0)}}
    <li class="waves-effect"><a href="/manager/students/{{subtract np 4}}">{{subtract np 4}}</a></li>
    {{/gte}}
    {{#gte np (subtract pagitems 1)}}
    <li class="waves-effect"><a href="/manager/students/{{subtract np 3}}">{{subtract np 3}}</a></li>
