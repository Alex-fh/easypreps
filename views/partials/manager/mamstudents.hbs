<div class="mainarea">

<h2>Students &nbsp;({{numstudents}})</h2>

<div class="border">

  <div class="collection">


    {{#each students}}
    <div  style="position: relative;">

      <div style="position: absolute; top: 25px; right: 116px;">
        <a class="waves-effect waves-light btn-small">&nbsp;&nbsp;Edit&nbsp;&nbsp;</a>
      </div>
      <div style="position: absolute; top: 25px; right: 30px;">
        <a class="waves-effect waves-light btn-small">Delete</a>
      </div>

      <a class="collection-item avatar valign-wrapper modal-trigger" href="#modal1{{_id}}"> 
        <i class="material-icons circle" title="Open">child_care</i>
        <span class="title">{{firstname}} {{lastname}}</span>
        <p>{{phone}} &nbsp; {{email}}</p>
        <p>{{zipcode}} &nbsp; {{address}}</p>
      </a>
    </div>

      <!-- Modal Structure -->
      <div id="modal1{{_id}}" class="modal modal-fixed-footer">
        <div class="modal-content">
          <h5>Primary Info</h5>
          <p>Primary First name - {{pfirstname}}</p>
          <p>Primary Last name - {{plastname}}</p>
          <p>Primary E-mail - {{pemail}}</p>
          <p>Primary Phone - {{pphone}}</p>
          <h5>The Student Info</h5>
          <p>First name - {{firstname}}</p>
          <p>Last name - {{lastname}}</p>
          <p>E-mail - {{email}}</p>
          <p>Phone - {{phone}}</p>
          <p>Zip code - {{zipcode}} </p>
          <p>Address - {{address}} </p>
        </div>
          <div class="modal-footer">
          <a href="#!" class="modal-close waves-effect waves-green btn-flat">OK</a>
          </div>
      </div>

    {{/each}} 
  </div>

  {{#eq pagitems 1}}
  <ul class="pagination">

    {{!-- Lefr arrows  --}}
    {{#lte np 1}}
    {{!-- <li class="disabled"><a href=""><i class="material-icons">first_page</i></a></li>
    <li class="disabled"><a href=""><i class="material-icons">chevron_left</i></a></li> --}}
    {{/lte}}

    {{!-- The active number --}}
    <li class="waves-effect active"><a href="/manager/students/{{np}}">{{np}}</a></li>

    {{!-- Right arrows --}}
    {{#gte np pagitems}}
    {{!-- <li class="disabled"><a href=""><i class="material-icons">chevron_right</i></a></li>
    <li class="disabled"><a href=""><i class="material-icons">last_page</i></a></li>
    The last page = {{pagitems}} --}}
    {{/gte}}

  </ul>
  {{/eq}}

